page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
}

.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: #fff;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%; 
  box-shadow: 0px 0px 5px 5px rgb(0, 238, 255);  
}  

.begin{
  position: relative;  
  height: 240rpx;  
  flex-direction: column;  
  align-items: center;  
}
